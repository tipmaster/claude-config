{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Shared MCP server definitions for Claude Code, OpenCode, Gemini CLI, and other tools. Each tool references these with tool-specific syntax.",
  "servers": {
    "serena": {
      "description": "IDE assistant with semantic code tools",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--context", "ide-assistant"],
      "env": {}
    },
    "headless-terminal": {
      "description": "Terminal operations",
      "command": ["/usr/local/bin/ht-mcp"],
      "env": {}
    },
    "dataforseo": {
      "description": "SEO tools and data",
      "command": ["node", "/Users/administrator/dev/tfwg/claude-config/mcp-servers/mcp-seo/build/main/main/cli.js"],
      "env": {
        "DATAFORSEO_USERNAME": "required",
        "DATAFORSEO_PASSWORD": "required"
      }
    },
    "chrome-bridge": {
      "description": "Browser automation via Chrome",
      "command": ["mcp-chrome-stdio"],
      "env": {},
      "platforms": ["laptop"]
    },
    "zen": {
      "description": "Multi-model AI orchestration",
      "command": ["bash", "-c", "for p in $(which uvx 2>/dev/null) ${HOME}/.local/bin/uvx /opt/homebrew/bin/uvx /usr/local/bin/uvx uvx; do [ -x \"$p\" ] && exec \"$p\" --from git+https://github.com/BeehiveInnovations/zen-mcp-server.git zen-mcp-server; done; echo 'uvx not found' >&2; exit 1"],
      "env": {
        "PATH": "/usr/local/bin:/usr/bin:/bin:/opt/homebrew/bin:${HOME}/.local/bin",
        "GEMINI_API_KEY": "optional",
        "OPENAI_API_KEY": "optional",
        "DISABLED_TOOLS": "optional",
        "DEFAULT_MODEL": "optional"
      }
    },
    "brave-search": {
      "description": "Web search capability",
      "command": ["npx", "-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "required"
      }
    },
    "filesystem": {
      "description": "File operations",
      "command": ["npx", "-y", "@modelcontextprotocol/server-filesystem", "/Users/administrator/dev"],
      "env": {}
    },
    "memory": {
      "description": "Persistent knowledge graph",
      "command": ["npx", "-y", "@modelcontextprotocol/server-memory"],
      "env": {}
    },
    "sqlite": {
      "description": "Database operations",
      "command": ["npx", "-y", "@modelcontextprotocol/server-sqlite", "--db-path", "/Users/administrator/dev"],
      "env": {}
    },
    "promos": {
      "description": "Custom promo server",
      "command": ["node", "/Users/administrator/dev/tfwg/promos/mcp-server.js"],
      "env": {}
    }
  },
  "usage": {
    "note": "This is a tool-agnostic definition. Each tool has its own syntax:",
    "claude_code": "Uses ${VAR} syntax in config/settings-laptop.json",
    "opencode": "Uses {env:VAR} syntax in config/opencode.json",
    "gemini_cli": "Uses ${VAR} syntax in config/gemini-settings.json",
    "environment_variables": "All tools share the same .env file for secrets"
  }
}
